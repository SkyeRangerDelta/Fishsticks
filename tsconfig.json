{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "outDir": "./Deploy",
    "noEmit": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["Src/**/*"],
  "exclude": [
    "node_modules"
  ]
}